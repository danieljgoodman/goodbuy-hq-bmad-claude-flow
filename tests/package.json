{
  "name": "professional-tier-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for Professional tier database schema implementation",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --selectProjects=\"Unit Tests\"",
    "test:integration": "jest --selectProjects=\"Integration Tests\"",
    "test:performance": "jest --selectProjects=\"Performance Tests\"",
    "test:migration": "jest integration/database-migration.test.ts",
    "test:compatibility": "jest integration/backward-compatibility.test.ts",
    "test:access": "jest integration/access-control-authorization.test.ts",
    "test:constraints": "jest integration/database-constraints.test.ts",
    "test:tier-access": "jest integration/tier-based-access-control.test.ts",
    "test:validation": "jest unit/professional-tier-validation.test.ts",
    "test:load": "jest performance/load-testing.test.ts",
    "test:benchmarks": "jest performance/professional-tier-benchmarks.test.ts",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:debug": "jest --detectOpenHandles --forceExit",
    "coverage:report": "node -e \"require('./utils/test-coverage-reporter').TestCoverageReporter.runCoverageAnalysis().then(console.log)\"",
    "coverage:html": "jest --coverage && open coverage/lcov-report/index.html",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "clean": "rm -rf coverage node_modules/.cache",
    "setup": "npm install && npm run clean"
  },
  "keywords": [
    "testing",
    "professional-tier",
    "database",
    "validation",
    "integration",
    "performance",
    "jest",
    "typescript"
  ],
  "author": "GoodBuy HQ Development Team",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "@faker-js/faker": "^8.4.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "eslint-config-next": "^13.5.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-html-reporters": "^3.1.5",
    "jest-junit": "^16.0.0",
    "node-mocks-http": "^1.12.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "setupFiles": ["<rootDir>/jest.env.js"],
    "collectCoverageFrom": [
      "**/*.{ts,tsx,js,jsx}",
      "!**/*.d.ts",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 85,
        "lines": 90,
        "statements": 90
      }
    },
    "testMatch": [
      "**/*.test.{ts,tsx,js,jsx}"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/../apps/web/src/$1"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/goodbuy-hq/bmad-claude-flow"
  },
  "bugs": {
    "url": "https://github.com/goodbuy-hq/bmad-claude-flow/issues"
  },
  "homepage": "https://github.com/goodbuy-hq/bmad-claude-flow#readme"
}